@model IEnumerable<Hero>

@{
    ViewData["Title"] = "Heroes List";
    var numberOfRows = Model.Count() > 0 ? Math.Ceiling(Model.Count() / 3d) : 0;
    var options = (ListOptions)TempData["options"];
}

<h1>Heroes List</h1>
<div class="container">
    @for (int i = 0; i < numberOfRows; i++)
    {
        var heroes = Model.Skip(i * 3).Take(3);
        <div class="row mb-4">
            @foreach (var hero in heroes)
            {
                <div class="col-sm-12 col-md-6 col-lg-4 d-flex align-items-stretch">
                    <div class="w-100 card">
                        <img src="@hero.ThumbnailUrl" class="card-img-top" alt="@hero.Name">
                        <div class="card-body">
                            <h5 class="card-title">@hero.Name</h5>
                            <p class="card-text">@hero.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
@{
    var k = (options.Page - 1).ToString();
    var l = options.Page.ToString();
    var m = (options.Page + 1).ToString();
}
@{
    if (options.Page == 1)
    {
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="@k" tabindex="-1">Previous</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="list?page=@l">@l</a>
                </li>
                <li class="page-item"><a class="page-link" href="list?page=@m">@m</a></li>
                <li class="page-item">
                    <a class="page-link" href="list?page=@m">Next</a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a class="page-link" href="list?page=@k">Previous</a>
                </li>
                <li class="page-item"><a class="page-link" href="list?page=@k">@k</a></li>
                <li class="page-item"><a class="page-link" href="list?page=@l">@l</a></li>
                <li class="page-item"><a class="page-link" href="list?page=@m">@m</a></li>
                <li class="page-item">
                    <a class="page-link" href="list?page=@m">Next</a>
                </li>
            </ul>
        </nav>
    }
}